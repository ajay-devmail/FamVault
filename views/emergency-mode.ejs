<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FamVault - Emergency Mode</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        .bg-card {
            background-color: #1e293b;
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body class="font-inter">
    <div
        class="min-h-screen bg-red-50 dark:bg-slate-900 text-slate-900 dark:text-white relative overflow-hidden transition-colors duration-200">

        <!-- Background Pulse Effect -->
        <div class="absolute inset-0 bg-red-600/5 dark:bg-red-600/10 z-0 animate-pulse pointer-events-none"></div>
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-red-500 via-orange-500 to-red-500"></div>

        <nav
            class="relative z-10 border-b border-red-200 dark:border-red-900/50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md px-6 py-4 flex justify-between items-center transition-colors">
            <a href="/profile"
                class="flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-red-600 dark:hover:text-white transition-colors group">
                <i data-lucide="arrow-left" class="w-5 h-5 group-hover:-translate-x-1 transition-transform"></i>
                <span class="font-medium">Exit Emergency Mode</span>
            </a>

            <div class="flex items-center gap-4">
                <!-- Theme Toggle -->
                <button onclick="toggleTheme()"
                    class="p-2 rounded-lg bg-red-100 dark:bg-slate-800 text-red-600 dark:text-red-400 hover:bg-red-200 dark:hover:text-white transition-colors">
                    <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                    <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
                </button>

                <div
                    class="flex items-center gap-2 text-red-600 dark:text-red-500 font-bold bg-red-100 dark:bg-red-500/10 px-4 py-1.5 rounded-full border border-red-200 dark:border-red-500/20 shadow-[0_0_15px_rgba(239,68,68,0.3)] animate-pulse">
                    <i data-lucide="siren" class="w-5 h-5"></i>
                    <span class="hidden sm:inline">EMERGENCY ACTIVE</span>
                    <span class="sm:hidden">EMERGENCY</span>
                </div>
            </div>
        </nav>

        <main class="relative z-10 max-w-4xl mx-auto px-6 py-10 space-y-8">

            <!-- Profile Card -->
            <div
                class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-md p-8 rounded-3xl shadow-xl dark:shadow-2xl border-l-8 border-red-500 flex flex-col md:flex-row gap-8 items-start transition-colors">
                <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                        <h1 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
                            <%= user.name %>
                        </h1>
                        <% if(user.bloodGroup) { %>
                            <span
                                class="bg-red-100 dark:bg-red-600 text-red-700 dark:text-white text-sm font-bold px-3 py-1 rounded-full shadow-sm dark:shadow-lg shadow-red-900/50">
                                <%= user.bloodGroup %>
                            </span>
                            <% } %>
                    </div>
                    <% if(user.dob) { %>
                        <p class="text-slate-600 dark:text-slate-400 font-medium text-lg">
                            DOB: <%= new Date(user.dob).toLocaleDateString('en-GB') %>
                                <span class="text-slate-500 dark:text-slate-500 text-sm ml-1">
                                    (<%= Math.floor((new Date() - new Date(user.dob).getTime()) / 3.15576e+10) %> yrs)
                                </span>
                        </p>
                        <% } %>
                            <% if(user.gender) { %>
                                <p class="text-slate-600 dark:text-slate-400 font-medium text-lg mt-1">
                                    Gender: <span class="capitalize">
                                        <%= user.gender %>
                                    </span>
                                </p>
                                <% } %>
                                    <% if(user.phone) { %>
                                        <p class="text-slate-600 dark:text-slate-400 font-medium text-lg mt-1">
                                            Phone: <%= user.phone %>
                                        </p>
                                        <% } %>
                </div>

                <div class="flex-1 grid grid-cols-2 gap-x-8 gap-y-6 w-full">
                    <% if(user.allergies) { %>
                        <div
                            class="bg-red-50 dark:bg-red-500/10 p-4 rounded-xl border border-red-200 dark:border-red-500/20">
                            <h3
                                class="text-xs text-red-600 dark:text-red-400 font-bold uppercase tracking-wider mb-2 flex items-center gap-2">
                                <i data-lucide="alert-circle" class="w-3 h-3"></i> Allergies
                            </h3>
                            <p class="text-slate-900 dark:text-white font-medium text-lg">
                                <%= user.allergies %>
                            </p>
                        </div>
                        <% } %>

                            <% if(user.medicalConditions) { %>
                                <div
                                    class="bg-blue-50 dark:bg-blue-500/10 p-4 rounded-xl border border-blue-200 dark:border-blue-500/20">
                                    <h3
                                        class="text-xs text-blue-600 dark:text-blue-400 font-bold uppercase tracking-wider mb-2 flex items-center gap-2">
                                        <i data-lucide="activity" class="w-3 h-3"></i> Conditions
                                    </h3>
                                    <p class="text-slate-900 dark:text-white font-medium text-lg">
                                        <%= user.medicalConditions %>
                                    </p>
                                </div>
                                <% } %>
                </div>
            </div>

            <!-- Emergency Contacts -->
            <div>
                <h2 class="text-2xl font-bold mb-6 flex items-center gap-3 text-slate-800 dark:text-white">
                    <div class="bg-red-600 p-2 rounded-lg text-white">
                        <i data-lucide="phone-call" class="w-6 h-6"></i>
                    </div>
                    Emergency Contacts
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- 112 / EMS Card -->
                    <div
                        class="bg-red-600 text-white p-6 rounded-2xl shadow-lg shadow-red-500/20 dark:shadow-red-900/40 hover:scale-[1.02] transition-transform cursor-pointer border-2 border-red-500 dark:border-red-400">
                        <div class="flex justify-between items-center">
                            <div class="flex items-center gap-4">
                                <div class="bg-white/20 p-3 rounded-full">
                                    <i data-lucide="ambulance" class="w-8 h-8 text-white"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold">112 Emergency Services</h3>
                                    <p class="text-red-100 font-medium">Police / Fire / Ambulance</p>
                                </div>
                            </div>
                            <a href="tel:112"
                                class="text-3xl font-black tracking-widest bg-white text-red-600 px-4 py-2 rounded-xl border-2 border-transparent hover:border-red-100 transition-colors">
                                112
                            </a>
                        </div>
                    </div>

                    <% if(contacts.length> 0) { %>
                        <% contacts.forEach(contact=> { %>
                            <div
                                class="bg-white dark:bg-slate-800 p-6 rounded-2xl border border-slate-200 dark:border-slate-700 hover:border-green-500/50 hover:bg-green-50 dark:hover:bg-slate-800/80 transition group relative overflow-hidden shadow-sm dark:shadow-none">
                                <div
                                    class="absolute top-0 right-0 w-20 h-20 bg-green-500 blur-[80px] opacity-10 dark:opacity-20 group-hover:opacity-30 dark:group-hover:opacity-40 transition">
                                </div>

                                <div class="flex justify-between items-center relative z-10">
                                    <div class="flex items-center gap-4">
                                        <div
                                            class="bg-green-100 dark:bg-green-500/10 p-3 rounded-full text-green-600 dark:text-green-500 group-hover:bg-green-600 dark:group-hover:bg-green-500 group-hover:text-white transition-colors">
                                            <i data-lucide="phone" class="w-6 h-6"></i>
                                        </div>
                                        <div>
                                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">
                                                <%= contact.name %>
                                            </h3>
                                            <p class="text-slate-500 dark:text-slate-400">
                                                <%= contact.relationship %>
                                            </p>
                                        </div>
                                    </div>
                                    <a href="tel:<%= contact.phone %>"
                                        class="bg-green-600 hover:bg-green-500 text-white px-5 py-2.5 rounded-xl font-bold shadow-lg shadow-green-500/30 dark:shadow-green-900/30 flex items-center gap-2 transition-transform active:scale-95">
                                        <i data-lucide="phone" class="w-4 h-4"></i> Call
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div
                                        class="bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl border border-dashed border-slate-300 dark:border-slate-700 text-center text-slate-500 transition-colors">
                                        No emergency contacts set. Go to settings to add them.
                                    </div>
                                    <% } %>
                </div>
            </div>

            <!-- Medical Records Section -->
            <div>
                <h2 class="text-2xl font-bold mb-6 flex items-center gap-3 text-slate-800 dark:text-white">
                    <div class="bg-blue-600 p-2 rounded-lg text-white">
                        <i data-lucide="folder-heart" class="w-6 h-6"></i>
                    </div>
                    Medical Records
                </h2>

                <% if(locals.medicalRecords && medicalRecords.length> 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <% medicalRecords.forEach(doc=> { %>
                            <div
                                class="bg-white dark:bg-slate-800 p-5 rounded-2xl border border-slate-200 dark:border-slate-700 hover:border-blue-500/50 hover:bg-blue-50 dark:hover:bg-slate-800/80 transition group relative overflow-hidden shadow-sm dark:shadow-none">
                                <div class="flex justify-between items-center relative z-10">
                                    <div class="flex items-center gap-4">
                                        <div
                                            class="bg-blue-100 dark:bg-blue-500/10 p-3 rounded-full text-blue-600 dark:text-blue-500 group-hover:bg-blue-600 dark:group-hover:bg-blue-500 group-hover:text-white transition-colors">
                                            <i data-lucide="file-text" class="w-6 h-6"></i>
                                        </div>
                                        <div>
                                            <h3
                                                class="text-lg font-bold text-slate-900 dark:text-white truncate max-w-[180px]">
                                                <%= doc.title %>
                                            </h3>
                                            <p class="text-slate-500 dark:text-slate-400 text-sm">
                                                <%= new Date(doc.createdAt).toLocaleDateString('en-GB') %>
                                            </p>
                                        </div>
                                    </div>
                                    <a href="/view-document/<%= doc._id %>" target="_blank"
                                        class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg font-bold shadow-lg shadow-blue-500/30 dark:shadow-blue-900/30 flex items-center gap-2 transition-transform active:scale-95">
                                        <i data-lucide="eye" class="w-4 h-4"></i> View
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <div
                            class="bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl border border-dashed border-slate-300 dark:border-slate-700 text-center text-slate-500 transition-colors">
                            No medical records found. Upload them to the Medical Records section.
                        </div>
                        <% } %>
            </div>

            <!-- Insurance Card (Optional) -->
            <% if(user.insuranceProvider || user.policyNumber) { %>
                <div
                    class="bg-white dark:bg-slate-800/50 p-6 rounded-2xl border border-slate-200 dark:border-slate-700 transition-colors">
                    <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-4 flex items-center gap-2">
                        <i data-lucide="file-check" class="w-5 h-5 text-blue-500 dark:text-blue-400"></i> Insurance
                        Information
                    </h3>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-6 text-sm">
                        <% if(user.insuranceProvider) { %>
                            <div>
                                <span class="block text-slate-500 mb-1">Provider</span>
                                <span class="block text-slate-900 dark:text-white font-medium text-lg">
                                    <%= user.insuranceProvider %>
                                </span>
                            </div>
                            <% } %>
                                <% if(user.policyNumber) { %>
                                    <div>
                                        <span class="block text-slate-500 mb-1">Policy Number</span>
                                        <span
                                            class="block text-slate-900 dark:text-white font-mono text-lg tracking-wider">
                                            <%= user.policyNumber %>
                                        </span>
                                    </div>
                                    <% } %>
                    </div>
                </div>
                <% } %>

        </main>
    </div>
    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>

</html>
