<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reminders</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body class="bg-gray-50 dark:bg-slate-900 text-slate-800 dark:text-white font-inter transition-colors duration-200">

    <div class="flex h-screen overflow-hidden">

        <aside
            class="w-64 bg-white dark:bg-slate-900 border-r border-gray-200 dark:border-white/10 hidden md:flex flex-col transition-colors duration-200">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-blue-600 p-1.5 rounded-lg">
                    <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
                </div>
                <span class="text-xl font-bold text-slate-900 dark:text-white transition-colors">FamVault</span>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-4">
                <a href="/overview"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="layout-dashboard"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Overview</span>
                </a>
                <a href="/documents"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="file-text"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Documents</span>
                </a>
                <a href="/medical-records"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="heart-pulse"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Medical Records</span>
                </a>
                <a href="/emergency-contacts"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="phone" class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Emergency Contacts</span>
                </a>

                <a href="/reminders"
                    class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg transition-colors shadow-sm shadow-blue-200 dark:shadow-blue-900/20">
                    <i data-lucide="bell" class="w-5 h-5"></i>
                    <span class="font-medium">Reminders</span>
                </a>
            </nav>

            <div class="p-4 border-t border-gray-100 dark:border-white/10 space-y-1">
                <a href="/profile"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 rounded-lg transition-colors">
                    <% if (user.profilePic) { %>
                        <img src="<%= user.profilePic %>" alt="Profile"
                            class="w-6 h-6 rounded-full object-cover ring-2 ring-white/10">
                        <% } else { %>
                            <i data-lucide="user" class="w-5 h-5"></i>
                            <% } %>
                                <span class="font-medium">Profile</span>
                </a>
                <a href="/settings"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="settings"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Settings</span>
                </a>
                <a href="/logout"
                    class="flex items-center gap-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-lg transition-colors">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    <span class="font-medium">Sign Out</span>
                </a>
            </div>
        </aside>

        <main class="flex-1 overflow-y-auto p-8 bg-gray-50 dark:bg-slate-900/50 transition-colors">
            <div class="max-w-5xl mx-auto">
                <div class="flex items-center justify-between mb-8">
                    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">Reminders</h1>
                    <!-- Theme Toggle -->
                    <button onclick="toggleTheme()"
                        class="p-2 rounded-lg bg-gray-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-gray-200 dark:hover:text-white transition-colors">
                        <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                        <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
                    </button>
                </div>

                <div
                    class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-200 dark:border-white/5 overflow-hidden transition-colors">
                    <% if(reminders.length===0) { %>
                        <div class="p-8 text-center text-slate-500 dark:text-slate-400">No active reminders set.</div>
                        <% } else { %>
                            <table class="w-full text-left">
                                <thead
                                    class="bg-slate-50 dark:bg-slate-900/50 border-b border-gray-100 dark:border-white/5 text-slate-500 dark:text-slate-400 text-sm uppercase">
                                    <tr>
                                        <th class="p-4 font-semibold">Status</th>
                                        <th class="p-4 font-semibold">Task / Document</th>
                                        <th class="p-4 font-semibold">Due Date</th>
                                        <th class="p-4 font-semibold">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100 dark:divide-white/5">
                                    <% reminders.forEach(doc=> {
                                        const today = new Date();
                                        const due = new Date(doc.reminderDate);
                                        const diffTime = due - today;
                                        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                        const isUrgent = diffDays <= 10 && diffDays>= 0;
                                            %>
                                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition">
                                                <td class="p-4">
                                                    <% if(isUrgent) { %>
                                                        <span
                                                            class="px-3 py-1 bg-red-100 dark:bg-red-500/10 text-red-600 dark:text-red-400 rounded-full text-xs font-bold animate-pulse">
                                                            Due in <%= diffDays %> days
                                                        </span>
                                                        <% } else if (diffDays < 0) { %>
                                                            <span
                                                                class="px-3 py-1 bg-gray-100 dark:bg-slate-700 text-gray-500 dark:text-slate-300 rounded-full text-xs font-bold">Overdue</span>
                                                            <% } else { %>
                                                                <span
                                                                    class="px-3 py-1 bg-green-100 dark:bg-green-500/10 text-green-600 dark:text-green-400 rounded-full text-xs font-bold">On
                                                                    Track</span>
                                                                <% } %>
                                                </td>
                                                <td class="p-4">
                                                    <div class="font-bold text-slate-900 dark:text-white">
                                                        <%= doc.reminderNote %>
                                                    </div>
                                                    <div class="text-xs text-slate-400">Linked to: <%= doc.title %>
                                                    </div>
                                                </td>
                                                <td class="p-4 text-slate-600 dark:text-slate-300 font-medium">
                                                    <%= due.toLocaleDateString('en-GB') %>
                                                </td>
                                                <td class="p-4">
                                                    <a href="/view-document/<%= doc._id %>" target="_blank"
                                                        class="text-blue-600 dark:text-blue-400 hover:underline text-sm">View
                                                        Doc</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                </tbody>
                            </table>
                            <% } %>
                </div>
            </div>
        </main>
    </div>
    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>

</html>
