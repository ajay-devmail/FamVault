<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - FamVault
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body class="bg-gray-50 dark:bg-slate-900 text-slate-800 dark:text-white font-inter transition-colors duration-200">
    <div id="folderModal"
        class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 hidden flex items-center justify-center">
        <div
            class="bg-white dark:bg-slate-800 rounded-2xl p-6 w-full max-w-md shadow-xl mx-4 border border-gray-100 dark:border-white/10">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Create New Folder</h3>
            <form action="/create-folder" method="POST">
                <input type="text" name="folderName" placeholder="e.g. Taxes, House Docs, Insurance" required
                    class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-white/10 bg-white dark:bg-slate-900 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 mb-6">

                <div class="flex gap-3 justify-end">
                    <button type="button" onclick="toggleModal()"
                        class="px-4 py-2 text-slate-600 dark:text-slate-400 hover:bg-gray-100 dark:hover:bg-slate-700 rounded-lg transition">Cancel</button>
                    <button type="submit"
                        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 shadow-md">
                        Create Folder
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Rename Folder Modal -->
    <div id="renameFolderModal"
        class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 hidden flex items-center justify-center">
        <div
            class="bg-white dark:bg-slate-800 rounded-2xl p-6 w-full max-w-md shadow-xl mx-4 border border-gray-100 dark:border-white/10">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Rename Folder</h3>
            <form id="renameFolderForm" action="" method="POST">
                <input type="text" id="renameInput" name="folderName" required
                    class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-white/10 bg-white dark:bg-slate-900 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 mb-6">

                <div class="flex gap-3 justify-end">
                    <button type="button" onclick="closeRenameModal()"
                        class="px-4 py-2 text-slate-600 dark:text-slate-400 hover:bg-gray-100 dark:hover:bg-slate-700 rounded-lg transition">Cancel</button>
                    <button type="submit"
                        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 shadow-md">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal"
        class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[60] hidden items-center justify-center transition-opacity">
        <div
            class="bg-white dark:bg-slate-800 rounded-2xl p-6 w-full max-w-sm shadow-2xl mx-4 transform transition-all scale-100 border border-gray-100 dark:border-white/10">
            <div class="text-center">
                <div
                    class="w-12 h-12 bg-red-100 dark:bg-red-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="trash-2" class="w-6 h-6 text-red-600 dark:text-red-500"></i>
                </div>
                <h3 id="deleteTitle" class="text-xl font-bold text-slate-900 dark:text-white mb-2">Delete Document?</h3>
                <p id="deleteDesc" class="text-slate-500 dark:text-slate-400 text-sm mb-6">Are you sure you want to
                    delete this file?
                    This
                    action cannot be
                    undone.</p>

                <div class="flex gap-3 justify-center">
                    <button onclick="closeDeleteModal()"
                        class="px-5 py-2.5 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-xl font-medium transition-colors">
                        Cancel
                    </button>
                    <a id="deleteLink" href="#"
                        class="px-5 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-xl font-medium shadow-lg shadow-red-200 dark:shadow-red-900/30 transition-all">
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="flex h-screen overflow-hidden">

        <aside
            class="w-64 bg-white dark:bg-slate-900 border-r border-gray-200 dark:border-white/10 hidden md:flex flex-col transition-colors duration-200">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-blue-600 p-1.5 rounded-lg">
                    <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
                </div>
                <span class="text-xl font-bold text-slate-900 dark:text-white transition-colors">FamVault</span>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-4">
                <a href="/overview"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="layout-dashboard"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Overview</span>
                </a>

                <% if(title !=='Medical Records' ) { %>
                    <a href="/documents"
                        class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg transition-colors shadow-sm shadow-blue-200 dark:shadow-blue-900/20">
                        <i data-lucide="file-text" class="w-5 h-5"></i>
                        <span class="font-medium">Documents</span>
                    </a>
                    <% } else { %>
                        <a href="/documents"
                            class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                            <i data-lucide="file-text"
                                class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                            <span class="font-medium">Documents</span>
                        </a>
                        <% } %>

                            <% if(title==='Medical Records' ) { %>
                                <a href="/medical-records"
                                    class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg transition-colors shadow-sm shadow-blue-200 dark:shadow-blue-900/20">
                                    <i data-lucide="heart-pulse" class="w-5 h-5"></i>
                                    <span class="font-medium">Medical Records</span>
                                </a>
                                <% } else { %>
                                    <a href="/medical-records"
                                        class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                                        <i data-lucide="heart-pulse"
                                            class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                                        <span class="font-medium">Medical Records</span>
                                    </a>
                                    <% } %>

                                        <a href="/emergency-contacts"
                                            class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                                            <i data-lucide="phone"
                                                class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                                            <span class="font-medium">Emergency Contacts</span>
                                        </a>

                                        <a href="/reminders"
                                            class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                                            <i data-lucide="bell"
                                                class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                                            <span class="font-medium">Reminders</span>
                                        </a>
            </nav>

            <div class="p-4 border-t border-gray-100 dark:border-white/10 space-y-1">
                <a href="/profile"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 rounded-lg transition-colors">
                    <% if (user.profilePic) { %>
                        <img src="<%= user.profilePic %>" alt="Profile"
                            class="w-6 h-6 rounded-full object-cover ring-2 ring-white/10">
                        <% } else { %>
                            <i data-lucide="user" class="w-5 h-5"></i>
                            <% } %>
                                <span class="font-medium">Profile</span>
                </a>
                <a href="/settings"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 rounded-lg transition-colors">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    <span class="font-medium">Settings</span>
                </a>
                <a href="/logout"
                    class="flex items-center gap-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-lg transition-colors">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    <span class="font-medium">Sign Out</span>
                </a>
            </div>
        </aside>

        <main class="flex-1 overflow-y-auto bg-gray-50 dark:bg-slate-900/50 transition-colors p-8">
            <div class="max-w-6xl mx-auto">

                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">
                        <%= title %>
                    </h1>
                    <div class="flex gap-3 items-center">
                        <!-- Theme Toggle -->
                        <button onclick="toggleTheme()"
                            class="p-2 mr-2 rounded-lg bg-gray-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-gray-200 dark:hover:text-white transition-colors">
                            <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                            <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
                        </button>

                        <% if(locals.currentFolderId) { %>
                            <a href="/documents"
                                class="bg-white dark:bg-slate-800 text-slate-700 dark:text-white border border-gray-200 dark:border-white/10 px-4 py-2 rounded-lg hover:bg-gray-50 dark:hover:bg-slate-700 flex items-center gap-2 shadow-sm transition-colors">
                                <i data-lucide="arrow-left" class="w-4 h-4"></i> Back
                            </a>
                            <% } %>
                                <button onclick="toggleModal()"
                                    class="bg-white dark:bg-slate-800 text-slate-700 dark:text-white border border-gray-200 dark:border-white/10 px-4 py-2 rounded-lg hover:bg-gray-50 dark:hover:bg-slate-700 flex items-center gap-2 shadow-sm transition-colors">
                                    <i data-lucide="folder-plus" class="w-4 h-4"></i> New Folder
                                </button>
                                <a href="/upload<%= typeof title !== 'undefined' && title === 'Medical Records' ? '?category=medical' : '' %>"
                                    class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center gap-2 shadow-sm shadow-blue-200 dark:shadow-blue-900/20">
                                    <i data-lucide="plus" class="w-4 h-4"></i> Upload
                                </a>
                    </div>
                </div>

                <form action="/documents" method="GET" class="mb-8">
                    <div class="relative">
                        <i data-lucide="search" class="absolute left-3 top-3 w-5 h-5 text-slate-400"></i>
                        <input type="text" name="search" value="<%= search %>" placeholder="Search by document name..."
                            class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 dark:border-white/10 focus:outline-none focus:ring-2 focus:ring-blue-100 dark:focus:ring-blue-500/20 shadow-sm bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400">
                    </div>
                </form>

                <!-- FOLDERS SECTION -->
                <% if(locals.folders && folders.length> 0) { %>
                    <div class="mb-8">
                        <h2 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Folders</h2>
                        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
                            <% folders.forEach(folder=> { %>
                                <div class="relative group">
                                    <a href="/<%= typeof title !== 'undefined' && title === 'Medical Records' ? 'medical-records' : 'documents' %>?folder=<%= folder._id %>"
                                        class="block p-4 rounded-xl border transition h-full <%= currentFolderId == folder._id ? 'bg-blue-50 dark:bg-blue-500/10 border-blue-200 dark:border-blue-500/30 ring-2 ring-blue-100 dark:ring-blue-500/20' : 'bg-white dark:bg-slate-800 border-gray-200 dark:border-white/5 hover:border-blue-300 dark:hover:border-blue-500/50 hover:shadow-sm' %>">
                                        <div class="flex items-center gap-3">
                                            <i data-lucide="folder"
                                                class="w-8 h-8 flex-shrink-0 <%= currentFolderId == folder._id ? 'text-blue-600 dark:text-blue-400 fill-blue-100 dark:fill-blue-500/10' : 'text-amber-400 fill-amber-100 dark:fill-amber-500/10' %>"></i>
                                            <span
                                                class="font-medium text-slate-700 dark:text-slate-200 truncate block w-full">
                                                <%= folder.name %>
                                            </span>
                                        </div>
                                    </a>
                                    <!-- Folder Actions -->
                                    <div
                                        class="absolute top-2 right-2 flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity bg-white/80 dark:bg-slate-800/80 rounded-lg p-1">
                                        <button onclick="openRenameModal('<%= folder._id %>', '<%= folder.name %>')"
                                            class="p-1.5 text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 rounded-md hover:bg-blue-50 dark:hover:bg-blue-500/10">
                                            <i data-lucide="pencil" class="w-3.5 h-3.5"></i>
                                        </button>
                                        <button onclick="openDeleteFolderModal('<%= folder._id %>')"
                                            class="p-1.5 text-slate-500 dark:text-slate-400 hover:text-red-600 dark:hover:text-red-400 rounded-md hover:bg-red-50 dark:hover:bg-red-500/10">
                                            <i data-lucide="trash-2" class="w-3.5 h-3.5"></i>
                                        </button>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                    <% } %>

                        <% if(docs.length===0) { %>
                            <div class="text-center py-20 text-slate-400 dark:text-slate-500">
                                <i data-lucide="folder-open" class="w-12 h-12 mx-auto mb-3 opacity-50"></i>
                                <p>No documents found.</p>
                            </div>
                            <% } else { %>
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                    <% docs.forEach(doc=> { %>
                                        <div
                                            class="bg-white dark:bg-slate-800 p-5 rounded-xl border border-gray-100 dark:border-white/5 shadow-sm hover:shadow-md transition group">
                                            <div class="flex justify-between items-start mb-4">
                                                <div
                                                    class="p-3 bg-blue-50 dark:bg-blue-500/10 text-blue-600 dark:text-blue-400 rounded-lg group-hover:bg-blue-600 group-hover:text-white dark:group-hover:text-white transition">
                                                    <i data-lucide="<%= doc.category === 'medical' ? 'heart-pulse' : 'file-text' %>"
                                                        class="w-6 h-6"></i>
                                                </div>
                                                <div class="flex gap-2">
                                                    <a href="/view-document/<%= doc._id %>" target="_blank"
                                                        class="p-2 text-slate-400 hover:text-blue-600 dark:hover:text-blue-400"
                                                        title="View Document">
                                                        <i data-lucide="eye" class="w-4 h-4"></i>
                                                    </a>
                                                    <button onclick="openDeleteDocModal('<%= doc._id %>')"
                                                        class="p-2 text-slate-400 hover:text-red-600 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-lg transition-colors"
                                                        title="Delete">
                                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <a href="/view-document/<%= doc._id %>" target="_blank"
                                                class="block hover:underline">
                                                <h3 class="font-bold text-slate-900 dark:text-white truncate">
                                                    <%= doc.title %>
                                                </h3>
                                            </a>
                                            <p class="text-xs text-slate-500 dark:text-slate-400 mb-4">
                                                <%= new Date(doc.createdAt).toLocaleDateString('en-GB') %> â€¢ <%=
                                                        doc.fileType.toUpperCase() %>
                                            </p>

                                            <% if(doc.hasReminder) { %>
                                                <div
                                                    class="text-xs bg-amber-50 dark:bg-amber-500/10 text-amber-700 dark:text-amber-400 px-3 py-1 rounded-full inline-flex items-center gap-1">
                                                    <i data-lucide="clock" class="w-3 h-3"></i>
                                                    <%= doc.reminderNote %> (<%= new
                                                            Date(doc.reminderDate).toLocaleDateString('en-GB') %>)
                                                </div>
                                                <% } %>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
            </div>
        </main>
    </div>
    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }

        function toggleModal() {
            const modal = document.getElementById('folderModal');
            modal.classList.toggle('hidden');
        }

        // Rename Folder
        function openRenameModal(id, name) {
            const modal = document.getElementById('renameFolderModal');
            document.getElementById('renameFolderForm').action = `/rename-folder/${id}`;
            document.getElementById('renameInput').value = name;
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeRenameModal() {
            const modal = document.getElementById('renameFolderModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        // Delete Logic
        const deleteModal = document.getElementById('deleteModal');
        const deleteTitle = document.getElementById('deleteTitle');
        const deleteDesc = document.getElementById('deleteDesc');
        const deleteLink = document.getElementById('deleteLink');

        function openDeleteDocModal(docId) {
            deleteTitle.innerText = 'Delete Document?';
            deleteDesc.innerText = 'Are you sure you want to delete this file? This action cannot be undone.';
            deleteLink.innerText = 'Delete File';
            deleteLink.href = `/delete-doc/${docId}`;
            deleteModal.classList.remove('hidden');
            deleteModal.classList.add('flex');
        }

        function openDeleteFolderModal(folderId) {
            deleteTitle.innerText = 'Delete Folder?';
            deleteDesc.innerText = 'Deleting this folder will move all its documents to "All Documents". This action cannot be undone.';
            deleteLink.innerText = 'Delete Folder';
            deleteLink.href = `/delete-folder/${folderId}`;
            deleteModal.classList.remove('hidden');
            deleteModal.classList.add('flex');
        }

        function closeDeleteModal() {
            deleteModal.classList.add('hidden');
            deleteModal.classList.remove('flex');
        }
    </script>
</body>

</html>
