<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - FamVault</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body
    class="bg-gray-50 dark:bg-cyan-950 flex items-center justify-center w-full min-h-screen font-sans text-slate-800 dark:text-white p-4 transition-colors duration-300">

    <div class="absolute top-6 right-6 z-20">
        <button onclick="toggleTheme()"
            class="p-2 rounded-full bg-white/80 dark:bg-black/20 text-slate-800 dark:text-white hover:bg-white dark:hover:bg-black/40 transition-all shadow-sm backdrop-blur-sm">
            <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
            <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
        </button>
    </div>

    <div
        class="w-full max-w-md bg-white dark:bg-zinc-900 border border-gray-200 dark:border-zinc-800 rounded-2xl shadow-xl dark:shadow-2xl p-8 transition-colors">

        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold tracking-tighter text-blue-600 dark:text-blue-500">Fam<span
                    class="text-slate-900 dark:text-white">Vault</span></h1>
            <p class="text-slate-500 dark:text-zinc-500 text-sm mt-2">Secure your family's digital legacy</p>
        </div>

        <h2 class="text-xl font-semibold mb-6 text-slate-800 dark:text-white">Create your account</h2>

        <form action="/register" method="post" class="flex flex-col space-y-5">

            <div class="flex flex-col">
                <label
                    class="text-xs font-semibold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-1 ml-1">Full
                    Name</label>
                <input
                    class="w-full border border-gray-200 dark:border-zinc-700 rounded-xl px-4 py-3 bg-gray-50 dark:bg-zinc-800 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                    type="text" name="name" placeholder="Username">
            </div>

            <div class="flex flex-col">
                <label
                    class="text-xs font-semibold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-1 ml-1">Email
                    Address</label>
                <input
                    class="w-full border border-gray-200 dark:border-zinc-700 rounded-xl px-4 py-3 bg-gray-50 dark:bg-zinc-800 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                    type="email" name="email" placeholder="Email">
            </div>

            <div class="flex flex-col">
                <label
                    class="text-xs font-semibold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-1 ml-1">Create
                    Password</label>
                <input
                    class="w-full border border-gray-200 dark:border-zinc-700 rounded-xl px-4 py-3 bg-gray-50 dark:bg-zinc-800 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                    type="password" name="password" placeholder="••••••••">
                <p class="text-[10px] text-slate-500 dark:text-zinc-500 mt-1 ml-1">Must be at least 8 characters long.
                </p>
            </div>

            <button
                class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-4 rounded-xl shadow-lg shadow-blue-500/30 dark:shadow-blue-900/20 transform transition active:scale-[0.97] mt-4"
                type="submit">
                Create Account
            </button>
        </form>

        <div class="mt-8 pt-6 border-t border-gray-100 dark:border-zinc-800 text-center">
            <p class="text-slate-500 dark:text-zinc-500 text-sm">
                Already have an account? <a href="/login"
                    class="text-blue-600 dark:text-blue-500 hover:text-blue-500 dark:hover:text-blue-400 font-medium underline-offset-4 hover:underline">Sign
                    In</a>
            </p>
        </div>
    </div>

    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>

</html>
