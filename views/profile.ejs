<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - FamVault</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>


<body class="bg-gray-50 dark:bg-slate-900 text-slate-800 dark:text-white font-inter transition-colors duration-200">
    <!-- Background Effects (Dark Mode Only) -->
    <div
        class="fixed inset-0 bg-gradient-to-br from-slate-900 via-blue-900/20 to-slate-900 z-0 hidden dark:block pointer-events-none">
    </div>
    <div
        class="fixed top-0 right-0 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-[100px] pointer-events-none hidden dark:block">
    </div>

    <div class="relative z-10 flex h-screen overflow-hidden">

        <aside
            class="w-64 bg-white dark:bg-slate-900 border-r border-gray-200 dark:border-white/10 hidden md:flex flex-col transition-colors duration-200">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-blue-600 p-2 rounded-xl shadow-lg shadow-blue-500/20">
                    <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
                </div>
                <!-- Light: Slate-900, Dark: White -->
                <span
                    class="text-xl font-bold text-slate-900 dark:text-transparent dark:bg-clip-text dark:bg-gradient-to-r dark:from-white dark:to-slate-400 transition-colors">FamVault</span>
            </div>

            <nav class="flex-1 px-4 space-y-2 mt-4">
                <a href="/overview"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-white rounded-xl transition-all group">
                    <i data-lucide="layout-dashboard"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"></i>
                    <span class="font-medium">Overview</span>
                </a>
                <a href="/documents"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-white rounded-xl transition-all group">
                    <i data-lucide="file-text"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"></i>
                    <span class="font-medium">Documents</span>
                </a>
                <a href="/medical-records"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-white rounded-xl transition-all group">
                    <i data-lucide="heart-pulse"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"></i>
                    <span class="font-medium">Medical Records</span>
                </a>
                <a href="/emergency-contacts"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-white rounded-xl transition-all group">
                    <i data-lucide="phone"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"></i>
                    <span class="font-medium">Emergency Contacts</span>
                </a>
                <a href="/reminders"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-white rounded-xl transition-all group">
                    <i data-lucide="bell"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"></i>
                    <span class="font-medium">Reminders</span>
                </a>
            </nav>

            <div class="p-4 border-t border-gray-200 dark:border-white/10 space-y-2">
                <a href="/profile"
                    class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-xl shadow-lg shadow-blue-500/30">
                    <% if (user.profilePic) { %>
                        <img src="<%= user.profilePic %>" alt="Profile"
                            class="w-6 h-6 rounded-full object-cover ring-2 ring-white/20">
                        <% } else { %>
                            <i data-lucide="user" class="w-5 h-5"></i>
                            <% } %>
                                <span class="font-medium">Profile</span>
                </a>
                <a href="/settings"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-white rounded-xl transition-all">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    <span class="font-medium">Settings</span>
                </a>
                <a href="/logout"
                    class="flex items-center gap-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 hover:text-red-700 dark:hover:text-red-300 rounded-xl transition-all">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    <span class="font-medium">Sign Out</span>
                </a>
            </div>
        </aside>

        <div
            class="flex-1 flex flex-col min-w-0 overflow-hidden bg-gray-50 dark:bg-slate-900/50 transition-colors duration-200">

            <header
                class="h-20 border-b border-gray-200 dark:border-white/10 flex items-center justify-between px-8 bg-white/80 dark:bg-slate-900/50 backdrop-blur-xl sticky top-0 z-20 transition-colors">
                <div>
                    <h1 class="text-2xl font-bold text-slate-900 dark:text-white transition-colors">My Profile</h1>
                    <p class="text-slate-500 dark:text-slate-400 text-sm transition-colors">Manage your personal
                        information</p>
                </div>
                <div class="flex items-center gap-4">
                    <!-- Theme Toggle -->
                    <button onclick="toggleTheme()"
                        class="p-2 rounded-lg bg-gray-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-gray-200 dark:hover:text-white transition-colors">
                        <!-- Sun Icon (Show in Dark Mode) -->
                        <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                        <!-- Moon Icon (Show in Light Mode) -->
                        <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
                    </button>

                    <a href="/emergency-mode"
                        class="flex items-center gap-2 px-4 py-2 bg-red-50 dark:bg-red-500/10 text-red-600 dark:text-red-400 border border-red-200 dark:border-red-500/20 rounded-lg hover:bg-red-600 dark:hover:bg-red-500 hover:text-white transition-all group shadow-sm hover:shadow-red-500/30">
                        <i data-lucide="alert-triangle" class="w-4 h-4 group-hover:animate-pulse"></i>
                        <span class="font-semibold">Emergency Mode</span>
                    </a>
                </div>
            </header>

            <main class="flex-1 overflow-y-auto p-8 scrollbar-hide">
                <div class="max-w-4xl mx-auto space-y-8">

                    <div class="max-w-4xl mx-auto space-y-8">

                        <div
                            class="bg-white dark:bg-white/5 backdrop-blur-xl border border-gray-200 dark:border-white/10 rounded-3xl overflow-hidden shadow-xl dark:shadow-2xl transition-colors">
                            <!-- Banner -->
                            <div class="h-40 bg-gradient-to-r from-blue-500 to-indigo-600 relative">
                                <div
                                    class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10">
                                </div>
                            </div>

                            <div class="px-8 pb-8">
                                <div class="relative flex justify-between items-end -mt-16 mb-8">
                                    <div class="p-2 bg-white dark:bg-slate-900 rounded-2xl shadow-xl transition-colors">
                                        <div
                                            class="w-32 h-32 bg-gray-100 dark:bg-slate-800 rounded-xl flex items-center justify-center overflow-hidden relative group">
                                            <% if (user.profilePic) { %>
                                                <img src="<%= user.profilePic %>" alt="Profile"
                                                    class="w-full h-full object-cover">
                                                <% } else { %>
                                                    <i data-lucide="user" class="w-12 h-12 text-slate-400"></i>
                                                    <% } %>
                                        </div>
                                    </div>
                                    <a href="/edit-profile"
                                        class="flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-slate-800 text-slate-700 dark:text-white border border-gray-200 dark:border-slate-700 rounded-xl font-semibold hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors shadow-sm">
                                        <i data-lucide="edit-3" class="w-4 h-4 text-blue-600 dark:text-blue-400"></i>
                                        Edit Profile
                                    </a>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 dark:text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Full
                                            Name</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.name %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Email
                                            Address</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.email %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Phone</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.phone || 'Not set' %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Date
                                            of Birth</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.dob ? new Date(user.dob).toLocaleDateString('en-GB') : 'Not set' %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Gender</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.gender || 'Not set' %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Family
                                            Role</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.role || 'Member' %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">Blood
                                            Group</label>
                                        <div
                                            class="text-lg font-bold text-red-600 dark:text-red-500 p-3 bg-red-50 dark:bg-red-500/10 rounded-xl border border-red-100 dark:border-red-500/20">
                                            <%= user.bloodGroup || 'O+' %>
                                        </div>
                                    </div>

                                    <div class="space-y-1 md:col-span-2 group">
                                        <label
                                            class="text-xs font-bold text-slate-500 uppercase tracking-wider group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">Address</label>
                                        <div
                                            class="text-lg font-medium text-slate-900 dark:text-white/90 p-3 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5 hover:border-blue-200 dark:hover:border-white/10 transition-colors">
                                            <%= user.address || 'Address not set' %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Help Section -->
                        <div
                            class="bg-blue-65 dark:bg-gradient-to-r dark:from-blue-900/40 dark:to-indigo-900/40 p-6 rounded-2xl border border-blue-100 dark:border-blue-500/20 flex flex-col md:flex-row items-center justify-between gap-4 transition-colors">
                            <div>
                                <h3 class="font-bold text-blue-900 dark:text-blue-100 mb-1">Need help with your vault?
                                </h3>
                                <p class="text-sm text-blue-700 dark:text-blue-200">Our support team is available
                                    24/7 for emergency
                                    access
                                    assistance.</p>
                            </div>
                            <div
                                class="flex items-center gap-2 text-blue-700 dark:text-blue-300 font-mono font-bold bg-blue-100 dark:bg-blue-950 px-4 py-2 rounded-lg border border-blue-200 dark:border-blue-500">
                                <i data-lucide="mail" class="w-5 h-5"></i>
                                famvault2621@gmail.com
                            </div>
                        </div>

                    </div>
            </main>
        </div>
    </div>
    </div>
    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>

</html>

