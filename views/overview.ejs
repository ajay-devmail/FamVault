<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FamVault - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body class="bg-gray-50 dark:bg-slate-900 text-slate-800 dark:text-white font-inter transition-colors duration-200">

    <div class="flex h-screen overflow-hidden">

        <aside
            class="w-64 bg-white dark:bg-slate-900 border-r border-gray-200 dark:border-white/10 hidden md:flex flex-col transition-colors duration-200">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-blue-600 p-1.5 rounded-lg">
                    <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
                </div>
                <span class="text-xl font-bold text-slate-900 dark:text-white transition-colors">FamVault</span>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-4">
                <a href="/overview"
                    class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg transition-colors shadow-sm shadow-blue-200 dark:shadow-blue-900/20">
                    <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
                    <span class="font-medium">Overview</span>
                </a>
                <a href="/documents"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="file-text"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Documents</span>
                </a>
                <a href="/medical-records"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="heart-pulse"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Medical Records</span>
                </a>
                <a href="/emergency-contacts"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="phone" class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Emergency Contacts</span>
                </a>
                <a href="/reminders"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="bell" class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Reminders</span>
                </a>
            </nav>

            <div class="p-4 border-t border-gray-100 dark:border-white/10 space-y-1">
                <a href="/profile"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 rounded-lg transition-colors">
                    <% if (user.profilePic) { %>
                        <img src="<%= user.profilePic %>" alt="Profile"
                            class="w-6 h-6 rounded-full object-cover ring-2 ring-white/10">
                        <% } else { %>
                            <i data-lucide="user" class="w-5 h-5"></i>
                            <% } %>
                                <span class="font-medium">Profile</span>
                </a>
                <a href="/settings"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 rounded-lg transition-colors">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    <span class="font-medium">Settings</span>
                </a>
                <a href="/logout"
                    class="flex items-center gap-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-lg transition-colors">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    <span class="font-medium">Sign Out</span>
                </a>
            </div>
        </aside>

        <main class="flex-1 overflow-y-auto bg-gray-50/50 dark:bg-slate-900/50 transition-colors">
            <!-- Modern Header with Blur -->
            <header
                class="bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-gray-200 dark:border-white/10 sticky top-0 z-10 transition-colors">
                <div class="max-w-7xl mx-auto px-8 py-4 flex justify-between items-center">
                    <!-- Search could go here -->
                    <div class="flex-1"></div>

                    <div class="flex items-center gap-4">
                        <!-- Theme Toggle -->
                        <button onclick="toggleTheme()"
                            class="p-2 rounded-lg bg-gray-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-gray-200 dark:hover:text-white transition-colors">
                            <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                            <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
                        </button>

                        <a href="/emergency-mode"
                            class="flex items-center gap-2 px-4 py-2 bg-red-50 dark:bg-red-500/10 border border-red-100 dark:border-red-500/20 text-red-600 dark:text-red-400 rounded-full hover:bg-red-100 dark:hover:bg-red-500/20 transition font-medium text-sm">
                            <i data-lucide="alert-triangle" class="w-4 h-4"></i>
                            Emergency Mode
                        </a>

                        <a href="/upload"
                            class="flex items-center gap-2 px-5 py-2.5 bg-slate-900 dark:bg-blue-600 text-white rounded-full hover:bg-slate-800 dark:hover:bg-blue-500 transition font-medium shadow-lg shadow-slate-200 dark:shadow-blue-900/20 text-sm">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                            Upload New
                        </a>
                    </div>
                </div>
            </header>

            <div class="max-w-7xl mx-auto px-8 py-8">

                <!-- Welcome Banner -->
                <div
                    class="relative overflow-hidden rounded-3xl bg-gradient-to-r from-blue-600 to-indigo-600 mb-10 shadow-xl shadow-blue-200">
                    <div class="absolute top-0 right-0 -mr-16 -mt-16 w-64 h-64 rounded-full bg-white/10 blur-3xl"></div>
                    <div
                        class="absolute bottom-0 left-0 -ml-16 -mb-16 w-64 h-64 rounded-full bg-indigo-500/20 blur-3xl">
                    </div>

                    <div class="relative p-10 text-white">
                        <h1 class="text-3xl font-bold mb-2">Welcome Back, <%= user.name %>! ðŸ‘‹</h1>
                        <p class="text-blue-100/90 text-lg max-w-2xl">Your family's legacy is secure. Here's what's
                            happening in your vault today.</p>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">

                    <a href="/documents"
                        class="block bg-white dark:bg-slate-800 p-6 rounded-2xl border border-gray-100 dark:border-white/5 shadow-[0_2px_8px_rgba(0,0,0,0.04)] dark:shadow-none hover:shadow-[0_8px_24px_rgba(0,0,0,0.08)] hover:-translate-y-1 transition-all duration-300 group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="bg-blue-50 dark:bg-blue-500/10 p-3 rounded-xl group-hover:bg-blue-600 transition-colors duration-300">
                                <i data-lucide="file-text"
                                    class="w-6 h-6 text-blue-600 dark:text-blue-400 group-hover:text-white transition-colors"></i>
                            </div>
                            <span
                                class="bg-gray-50 dark:bg-slate-700 text-gray-600 dark:text-slate-300 text-[10px] font-bold px-2 py-1 rounded-full uppercase tracking-wider">All
                                Files</span>
                        </div>
                        <div class="text-3xl font-bold text-slate-800 dark:text-white tracking-tight">
                            <%= totalDocs || 0 %>
                        </div>
                        <div class="text-sm text-slate-400 mt-1 font-medium">Total Documents</div>
                    </a>

                    <a href="/medical-records"
                        class="block bg-white dark:bg-slate-800 p-6 rounded-2xl border border-gray-100 dark:border-white/5 shadow-[0_2px_8px_rgba(0,0,0,0.04)] dark:shadow-none hover:shadow-[0_8px_24px_rgba(0,0,0,0.08)] hover:-translate-y-1 transition-all duration-300 group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="bg-emerald-50 dark:bg-emerald-500/10 p-3 rounded-xl group-hover:bg-emerald-500 transition-colors duration-300">
                                <i data-lucide="heart-pulse"
                                    class="w-6 h-6 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors"></i>
                            </div>
                            <span
                                class="bg-gray-50 dark:bg-slate-700 text-gray-600 dark:text-slate-300 text-[10px] font-bold px-2 py-1 rounded-full uppercase tracking-wider">Health</span>
                        </div>
                        <div class="text-3xl font-bold text-slate-800 dark:text-white tracking-tight">
                            <%= medicalDocs || 0 %>
                        </div>
                        <div class="text-sm text-slate-400 mt-1 font-medium">Medical Records</div>
                    </a>

                    <a href="/emergency-contacts"
                        class="block bg-white dark:bg-slate-800 p-6 rounded-2xl border border-gray-100 dark:border-white/5 shadow-[0_2px_8px_rgba(0,0,0,0.04)] dark:shadow-none hover:shadow-[0_8px_24px_rgba(0,0,0,0.08)] hover:-translate-y-1 transition-all duration-300 group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="bg-amber-50 dark:bg-amber-500/10 p-3 rounded-xl group-hover:bg-amber-500 transition-colors duration-300">
                                <i data-lucide="alert-triangle"
                                    class="w-6 h-6 text-amber-500 group-hover:text-white transition-colors"></i>
                            </div>
                            <span
                                class="bg-gray-50 dark:bg-slate-700 text-gray-600 dark:text-slate-300 text-[10px] font-bold px-2 py-1 rounded-full uppercase tracking-wider">Emergency</span>
                        </div>
                        <div class="text-3xl font-bold text-slate-800 dark:text-white tracking-tight">
                            <%= contactsCount || 0 %>
                        </div>
                        <div class="text-sm text-slate-400 mt-1 font-medium">Trusted Contacts</div>
                    </a>

                    <a href="/reminders"
                        class="block bg-white dark:bg-slate-800 p-6 rounded-2xl border border-gray-100 dark:border-white/5 shadow-[0_2px_8px_rgba(0,0,0,0.04)] dark:shadow-none hover:shadow-[0_8px_24px_rgba(0,0,0,0.08)] hover:-translate-y-1 transition-all duration-300 group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="bg-purple-50 dark:bg-purple-500/10 p-3 rounded-xl group-hover:bg-purple-500 transition-colors duration-300">
                                <i data-lucide="clock"
                                    class="w-6 h-6 text-purple-600 dark:text-purple-400 group-hover:text-white transition-colors"></i>
                            </div>
                            <span
                                class="bg-gray-50 dark:bg-slate-700 text-gray-600 dark:text-slate-300 text-[10px] font-bold px-2 py-1 rounded-full uppercase tracking-wider">Active</span>
                        </div>
                        <div class="text-3xl font-bold text-slate-800 dark:text-white tracking-tight">
                            <%= pendingReminders ? pendingReminders.length : 0 %>
                        </div>
                        <div class="text-sm text-slate-400 mt-1 font-medium">Recent Reminders</div>
                    </a>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                    <div class="lg:col-span-2">
                        <div
                            class="bg-white dark:bg-slate-800 rounded-xl border border-gray-100 dark:border-white/5 shadow-sm transition-colors">
                            <div
                                class="p-6 border-b border-gray-100 dark:border-white/5 flex justify-between items-center">
                                <div>
                                    <h2 class="text-lg font-bold text-slate-900 dark:text-white">Recent Documents</h2>
                                    <p class="text-sm text-slate-500 dark:text-slate-400">Recently accessed or uploaded
                                        files</p>
                                </div>
                                <a href="/documents"
                                    class="text-sm font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">View
                                    All</a>
                            </div>

                            <div class="divide-y divide-gray-50 dark:divide-white/5">
                                <% if(!recentDocs || recentDocs.length===0) { %>
                                    <div class="p-8 text-center text-slate-400 text-sm">
                                        No documents found. <a href="/upload"
                                            class="text-blue-600 dark:text-blue-400 font-semibold">Upload
                                            one now?</a>
                                    </div>
                                    <% } else { %>
                                        <% recentDocs.forEach(doc=> { %>
                                            <div
                                                class="p-4 hover:bg-slate-50 dark:hover:bg-white/5 transition flex items-center gap-4 group">
                                                <div
                                                    class="p-3 bg-blue-50 dark:bg-blue-500/10 text-blue-600 dark:text-blue-400 rounded-lg">
                                                    <i data-lucide="<%= doc.category === 'medical' ? 'heart-pulse' : 'file-text' %>"
                                                        class="w-5 h-5"></i>
                                                </div>
                                                <div class="flex-1">
                                                    <h3 class="font-medium text-slate-900 dark:text-white truncate">
                                                        <%= doc.title %>
                                                    </h3>
                                                    <p class="text-xs text-slate-500 dark:text-slate-400 capitalize">
                                                        <%= doc.category %> â€¢ <%= new
                                                                Date(doc.createdAt).toLocaleDateString('en-GB') %>
                                                    </p>
                                                </div>

                                                <div
                                                    class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                                    <a href="/view-document/<%= doc._id %>" target="_blank" title="Open"
                                                        class="p-2 text-slate-400 hover:text-blue-600 dark:hover:text-blue-400">
                                                        <i data-lucide="external-link" class="w-4 h-4"></i>
                                                    </a>
                                                    <a href="/delete-doc/<%= doc._id %>" title="Delete"
                                                        onclick="return confirm('Delete this file?')"
                                                        class="p-2 text-slate-400 hover:text-red-600 dark:hover:text-red-400">
                                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <% }) %>
                                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-6">

                        <div
                            class="bg-orange-50 dark:bg-orange-500/10 border border-orange-100 dark:border-orange-500/20 rounded-xl p-6">
                            <div class="flex items-center gap-2 text-orange-700 dark:text-orange-400 font-bold mb-2">
                                <i data-lucide="alert-triangle" class="w-5 h-5"></i>
                                Emergency Access
                            </div>
                            <p class="text-orange-800/80 dark:text-orange-300 text-sm mb-4 leading-relaxed">
                                Quick access to trusted contacts and critical info.
                            </p>
                            <a href="/emergency-mode"
                                class="block w-full text-center py-2.5 bg-orange-500 hover:bg-orange-600 text-white font-semibold rounded-lg shadow-sm transition">
                                Activate Emergency Mode
                            </a>
                            <p class="text-xs text-orange-400 mt-3 text-center">
                                Tap to view trusted contacts immediately.
                            </p>
                        </div>

                        <div
                            class="bg-white dark:bg-slate-800 rounded-xl border border-gray-100 dark:border-white/5 shadow-sm p-6 transition-colors">
                            <div class="flex justify-between items-center mb-4">
                                <h3 class="font-bold text-slate-900 dark:text-white">Recent Reminders</h3>
                                <a href="/reminders"
                                    class="text-xs text-blue-600 dark:text-blue-400 font-semibold hover:underline">View
                                    All</a>
                            </div>

                            <div class="space-y-4">
                                <% if(!pendingReminders || pendingReminders.length===0) { %>
                                    <div class="text-xs text-slate-400 text-center py-4">No upcoming reminders.</div>
                                    <% } else { %>
                                        <% pendingReminders.forEach(reminder=> {
                                            const daysLeft = Math.ceil((new Date(reminder.reminderDate) - new Date()) /
                                            (1000 * 60 * 60 * 24));
                                            %>
                                            <div class="flex gap-3 items-start">
                                                <div
                                                    class="mt-1 w-2 h-2 rounded-full <%= daysLeft <= 3 ? 'bg-red-500' : 'bg-blue-500' %>">
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-slate-900 dark:text-white">
                                                        <%= reminder.reminderNote %>
                                                    </p>
                                                    <p class="text-xs text-slate-500 dark:text-slate-400">
                                                        <%= daysLeft < 0 ? 'Overdue' : (daysLeft===0 ? 'Today' : 'In ' +
                                                            daysLeft + ' days' ) %>
                                                    </p>
                                                </div>
                                            </div>
                                            <% }) %>
                                                <% } %>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </main>
    </div>

    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>

</html>
