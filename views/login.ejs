<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - FamVault</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body
    class="bg-gray-50 dark:bg-[url('https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=2564&auto=format&fit=crop')] bg-cover bg-center flex items-center justify-center w-full h-screen font-sans text-slate-800 dark:text-white transition-colors duration-300">

    <div
        class="absolute inset-0 bg-white/0 dark:bg-black/40 backdrop-blur-[0px] dark:backdrop-blur-[2px] transition-all">
    </div>

    <div class="absolute top-6 right-6 z-20">
        <button onclick="toggleTheme()"
            class="p-2 rounded-full bg-white/80 dark:bg-black/50 text-slate-800 dark:text-white hover:bg-white dark:hover:bg-black/70 transition-all shadow-sm backdrop-blur-sm">
            <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
            <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
        </button>
    </div>

    <div
        class="relative w-full max-w-md p-8 bg-white dark:bg-white/10 backdrop-blur-xl border border-gray-200 dark:border-white/20 rounded-2xl shadow-xl dark:shadow-2xl transition-colors">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold tracking-tighter text-slate-900 dark:text-white">
                <span class="text-blue-600 dark:text-blue-400">Fam</span>Vault
            </h1>
            <p class="text-slate-500 dark:text-indigo-200 mt-2 text-sm font-medium">Secure access to your family legacy
            </p>
        </div>

        <h3 class="text-xl font-semibold mb-6 text-center text-slate-800 dark:text-white">Welcome Back</h3>

        <form action="/login" method="post" class="flex flex-col space-y-5">
            <div>
                <label
                    class="block text-xs font-semibold text-slate-500 dark:text-indigo-200 uppercase tracking-widest mb-1.5 ml-1">Email
                    Address</label>
                <input
                    class="w-full border border-gray-200 dark:border-white/10 rounded-xl px-4 py-3 bg-gray-50 dark:bg-black/20 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:bg-white dark:focus:bg-black/30 transition-all font-medium"
                    type="email" name="email" placeholder="name@example.com">
            </div>

            <div>
                <div class="flex justify-between items-center mb-1.5 ml-1">
                    <label
                        class="block text-xs font-semibold text-slate-500 dark:text-indigo-200 uppercase tracking-widest">Password</label>
                </div>
                <input
                    class="w-full border border-gray-200 dark:border-white/10 rounded-xl px-4 py-3 bg-gray-50 dark:bg-black/20 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:bg-white dark:focus:bg-black/30 transition-all font-medium"
                    type="password" name="password" placeholder="••••••••">
                <div class="text-right mt-2">
                    <a href="/forgot-password"
                        class="text-xs text-blue-600 dark:text-blue-300 hover:text-blue-800 dark:hover:text-white hover:underline transition-colors">Forgot
                        Password?</a>
                </div>
            </div>

            <button
                class="w-full mt-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 transform transition-all active:scale-[0.98]"
                type="submit">
                Sign In
            </button>
        </form>

        <p class="text-center text-sm text-slate-500 dark:text-indigo-200/80 mt-8">
            Don't have an account? <a href="/register"
                class="text-blue-600 dark:text-white font-semibold hover:underline">Create one</a>
        </p>
    </div>

    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</body>

</html>
