<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Emergency Contacts</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>

<body class="bg-gray-50 dark:bg-slate-900 text-slate-800 dark:text-white font-inter transition-colors duration-200">

    <div class="flex h-screen overflow-hidden">

        <aside
            class="w-64 bg-white dark:bg-slate-900 border-r border-gray-200 dark:border-white/10 hidden md:flex flex-col transition-colors duration-200">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-blue-600 p-1.5 rounded-lg">
                    <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
                </div>
                <span class="text-xl font-bold text-slate-900 dark:text-white transition-colors">FamVault</span>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-4">
                <a href="/overview"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="layout-dashboard"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Overview</span>
                </a>
                <a href="/documents"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="file-text"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Documents</span>
                </a>
                <a href="/medical-records"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="heart-pulse"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Medical Records</span>
                </a>

                <a href="/emergency-contacts"
                    class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg transition-colors shadow-sm shadow-blue-200 dark:shadow-blue-900/20">
                    <i data-lucide="phone" class="w-5 h-5"></i>
                    <span class="font-medium">Emergency Contacts</span>
                </a>

                <a href="/reminders"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="bell" class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Reminders</span>
                </a>
            </nav>

            <div class="p-4 border-t border-gray-100 dark:border-white/10 space-y-1">
                <a href="/profile"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 rounded-lg transition-colors">
                    <% if (user.profilePic) { %>
                        <img src="<%= user.profilePic %>" alt="Profile"
                            class="w-6 h-6 rounded-full object-cover ring-2 ring-white/10">
                        <% } else { %>
                            <i data-lucide="user" class="w-5 h-5"></i>
                            <% } %>
                                <span class="font-medium">Profile</span>
                </a>
                <a href="/settings"
                    class="flex items-center gap-3 px-4 py-3 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg transition-colors group">
                    <i data-lucide="settings"
                        class="w-5 h-5 group-hover:text-blue-600 dark:group-hover:text-blue-400"></i>
                    <span class="font-medium">Settings</span>
                </a>
                <a href="/logout"
                    class="flex items-center gap-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-lg transition-colors">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    <span class="font-medium">Sign Out</span>
                </a>
            </div>
        </aside>

        <main class="flex-1 overflow-y-auto p-8 bg-gray-50 dark:bg-slate-900/50 transition-colors">
            <div class="max-w-5xl mx-auto">
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h1 class="text-3xl font-bold text-slate-900 dark:text-white">Emergency Contacts</h1>
                        <p class="text-slate-500 dark:text-slate-400 mt-1">Trusted people to contact in case of
                            emergency.</p>
                    </div>
                    <div class="flex items-center gap-4">
                        <!-- Theme Toggle -->
                        <button onclick="toggleTheme()"
                            class="p-2 rounded-lg bg-gray-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-gray-200 dark:hover:text-white transition-colors">
                            <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                            <i data-lucide="moon" class="w-5 h-5 dark:hidden"></i>
                        </button>
                        <button onclick="openAddModal()"
                            class="bg-blue-600 text-white px-5 py-2.5 rounded-xl hover:bg-blue-700 flex items-center gap-2 shadow-lg shadow-blue-200 dark:shadow-blue-900/20 transition-all">
                            <i data-lucide="plus" class="w-5 h-5"></i> Add Contact
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% if(contacts.length===0) { %>
                        <div
                            class="col-span-3 text-center py-20 text-slate-400 dark:text-slate-500 bg-white dark:bg-slate-800 rounded-2xl border border-dashed border-gray-200 dark:border-white/10 transition-colors">
                            <div
                                class="w-16 h-16 bg-blue-50 dark:bg-blue-500/10 text-blue-500 dark:text-blue-400 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="shield-alert" class="w-8 h-8"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">No Contacts Added
                            </h3>
                            <p class="mb-6">Add contacts so they appear in Emergency Mode.</p>
                            <button onclick="openAddModal()"
                                class="text-blue-600 dark:text-blue-400 font-medium hover:underline">Add one
                                now</button>
                        </div>
                        <% } else { %>
                            <% contacts.forEach(contact=> { %>
                                <div
                                    class="bg-white dark:bg-slate-800 p-6 rounded-2xl border border-gray-100 dark:border-white/5 shadow-sm hover:shadow-md transition group relative overflow-hidden">
                                    <div class="absolute top-0 left-0 w-1 h-full bg-green-500"></div>

                                    <div class="flex justify-between items-start mb-4">
                                        <div class="flex items-center gap-3">
                                            <div
                                                class="w-10 h-10 bg-green-50 dark:bg-green-500/10 text-green-600 dark:text-green-400 rounded-lg flex items-center justify-center">
                                                <i data-lucide="phone" class="w-5 h-5"></i>
                                            </div>
                                            <div>
                                                <h3 class="font-bold text-lg text-slate-900 dark:text-white">
                                                    <%= contact.name %>
                                                </h3>
                                                <p class="text-sm text-slate-500 dark:text-slate-400 font-medium">
                                                    <%= contact.relationship %>
                                                </p>
                                            </div>
                                        </div>

                                        <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                                            <button
                                                onclick="openEditModal('<%= contact._id %>', '<%= contact.name %>', '<%= contact.relationship %>', '<%= contact.phone %>')"
                                                class="p-2 text-slate-400 hover:text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-500/10 rounded-lg transition-colors">
                                                <i data-lucide="edit-2" class="w-4 h-4"></i>
                                            </button>
                                            <button onclick="openDeleteModal('<%= contact._id %>')"
                                                class="p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-lg transition-colors">
                                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div
                                        class="bg-slate-50 dark:bg-slate-900/50 rounded-xl p-3 flex justify-between items-center mb-2">
                                        <span class="font-mono font-bold text-slate-700 dark:text-slate-300">
                                            <%= contact.phone %>
                                        </span>
                                        <a href="tel:<%= contact.phone %>"
                                            class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center hover:bg-green-600 transition shadow-sm">
                                            <i data-lucide="phone-call" class="w-4 h-4"></i>
                                        </a>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } %>
                </div>
            </div>
    </div>
    </main>

    <!-- Add/Edit Contact Modal -->
    <div id="contactModal"
        class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 hidden items-center justify-center transition-opacity">
        <div
            class="bg-white dark:bg-slate-800 rounded-2xl p-6 w-full max-w-md shadow-2xl mx-4 transform transition-all scale-100 border border-gray-100 dark:border-white/5">
            <h3 id="modalTitle" class="text-xl font-bold text-slate-900 dark:text-white mb-4">Add New Contact</h3>
            <form id="contactForm" action="/add-contact" method="POST">

                <div class="mb-4">
                    <label class="block text-xs font-bold text-slate-500 dark:text-slate-400 mb-1">Full Name</label>
                    <input type="text" name="name" id="contactName" placeholder="e.g. Dr. Smith" required
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-white/10 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white">
                </div>

                <div class="mb-4">
                    <label class="block text-xs font-bold text-slate-500 dark:text-slate-400 mb-1">Relationship</label>
                    <input type="text" name="relationship" id="contactRel" placeholder="e.g. Doctor, Spouse" required
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-white/10 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white">
                </div>

                <div class="mb-6">
                    <label class="block text-xs font-bold text-slate-500 dark:text-slate-400 mb-1">Phone Number</label>
                    <input type="text" name="phone" id="contactPhone" placeholder="+1 (555) ..." required
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-white/10 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white">
                </div>

                <div class="flex gap-3 justify-end">
                    <button type="button" onclick="closeContactModal()"
                        class="px-5 py-2.5 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-xl font-medium transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                        class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-medium shadow-lg shadow-blue-200 dark:shadow-blue-900/20 transition-all">
                        Save Contact
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal"
        class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[60] hidden items-center justify-center transition-opacity">
        <div
            class="bg-white dark:bg-slate-800 rounded-2xl p-6 w-full max-w-sm shadow-2xl mx-4 transform transition-all scale-100 border border-gray-100 dark:border-white/5">
            <div class="text-center">
                <div
                    class="w-12 h-12 bg-red-100 dark:bg-red-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="trash-2" class="w-6 h-6 text-red-600 dark:text-red-400"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">Remove Contact?</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm mb-6">Are you sure you want to remove this
                    emergency contact?</p>

                <div class="flex gap-3 justify-center">
                    <button onclick="closeDeleteModal()"
                        class="px-5 py-2.5 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-xl font-medium transition-colors">
                        Cancel
                    </button>
                    <a id="deleteLink" href="#"
                        class="px-5 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-xl font-medium shadow-lg shadow-red-200 dark:shadow-red-900/20 transition-all">
                        Remove
                    </a>
                </div>
            </div>
        </div>
    </div>

    </div>
    <script>
        lucide.createIcons();

        // Theme Logic
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Initialize Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }

        function openAddModal() {
            document.getElementById('modalTitle').innerText = 'Add New Contact';
            document.getElementById('contactForm').action = '/add-contact';
            document.getElementById('contactName').value = '';
            document.getElementById('contactRel').value = '';
            document.getElementById('contactPhone').value = '';

            const modal = document.getElementById('contactModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function openEditModal(id, name, rel, phone) {
            document.getElementById('modalTitle').innerText = 'Edit Contact';
            document.getElementById('contactForm').action = `/edit-contact/${id}`;
            document.getElementById('contactName').value = name;
            document.getElementById('contactRel').value = rel;
            document.getElementById('contactPhone').value = phone;

            const modal = document.getElementById('contactModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeContactModal() {
            const modal = document.getElementById('contactModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        function openDeleteModal(id) {
            document.getElementById('deleteLink').href = `/delete-contact/${id}`;
            const modal = document.getElementById('deleteModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeDeleteModal() {
            const modal = document.getElementById('deleteModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }
    </script>
</body>

</html>
