<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Emergency Contacts</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-50 flex min-h-screen">
    <div
        class="md:hidden fixed top-0 left-0 right-0 bg-white border-b border-gray-200 p-4 flex justify-between items-center z-50">
        <div class="flex items-center gap-2">
            <div class="bg-blue-600 p-1 rounded">
                <i data-lucide="shield" class="w-5 h-5 text-white"></i>
            </div>
            <span class="font-bold text-slate-900">FamVault</span>
        </div>
        <button id="menuBtn" class="p-2 text-slate-600">
            <i data-lucide="menu"></i>
        </button>
    </div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 z-40 w-64 bg-white border-r border-gray-200 
        transition-transform duration-300 transform -translate-x-full 
        md:translate-x-0 md:static md:flex flex-col h-screen shrink-0">

        <div class="p-6 flex items-center gap-3">
            <div class="bg-blue-600 p-1.5 rounded-lg">
                <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
            </div>
            <span class="text-xl font-bold text-slate-900">FamVault</span>
        </div>

        <nav class="flex-1 px-4 space-y-1 mt-4">
            <a href="/overview"
                class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-lg transition-colors">
                <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
                <span class="font-medium">Overview</span>
            </a>
            <a href="/documents"
                class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-lg transition-colors">
                <i data-lucide="file-text" class="w-5 h-5"></i>
                <span class="font-medium">Documents</span>
            </a>
            <a href="/medical-records"
                class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-lg transition-colors">
                <i data-lucide="heart-pulse" class="w-5 h-5"></i>
                <span class="font-medium">Medical Records</span>
            </a>
            <a href="/emergency-contacts"
                class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg shadow-sm">
                <i data-lucide="phone" class="w-5 h-5"></i>
                <span class="font-medium">Contacts</span>
            </a>
            <a href="/reminders"
                class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-lg transition-colors">
                <i data-lucide="bell" class="w-5 h-5"></i>
                <span class="font-medium">Reminders</span>
            </a>
        </nav>

        <div class="p-4 border-t border-gray-100">
            <a href="/settings"
                class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-lg transition-colors">
                <i data-lucide="settings" class="w-5 h-5"></i>
                <span class="font-medium">Settings</span>
            </a>

            <a href="/logout"
                class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                <i data-lucide="log-out" class="w-5 h-5"></i>
                <span class="font-medium">Sign Out</span>
            </a>
        </div>
    </aside>

    <main class="flex-1 p-8 pt-20 md:pt-8 overflow-y-auto">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center gap-3 mb-8">
                <a href="/overview" class="p-2 bg-white border rounded-lg hover:bg-gray-50">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                </a>
                <h1 class="text-3xl font-bold text-slate-900">Emergency Contacts</h1>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 mb-8">
                <h2 class="text-lg font-bold mb-4 text-slate-800">Add New Contact</h2>
                <form action="/add-contact" method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                    <div>
                        <label class="block text-xs font-bold text-slate-500 mb-1">Name</label>
                        <input type="text" name="name" placeholder="e.g. Dr. Smith" required
                            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-500 mb-1">Relationship</label>
                        <input type="text" name="relationship" placeholder="e.g. Cardiologist" required
                            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-500 mb-1">Phone</label>
                        <input type="text" name="phone" placeholder="+1 555..." required
                            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                    </div>
                    <button type="submit"
                        class="bg-blue-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-700 transition-colors h-[42px]">
                        Add Contact
                    </button>
                </form>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                <% contacts.forEach(contact=> { %>
                    <div
                        class="bg-white p-6 rounded-xl border border-l-4 border-l-green-500 shadow-sm flex justify-between items-center hover:shadow-md transition-shadow">
                        <div>
                            <h3 class="font-bold text-xl text-slate-900">
                                <%= contact.name %>
                            </h3>
                            <p class="text-sm text-slate-500">
                                <%= contact.relationship %>
                            </p>
                        </div>
                        <div class="text-right">
                            <div class="text-lg font-mono font-bold text-slate-700">
                                <%= contact.phone %>
                            </div>
                            <a href="tel:<%= contact.phone %>"
                                class="inline-flex items-center gap-1 mt-2 text-xs text-green-600 font-bold hover:underline">
                                <i data-lucide="phone-forwarded" class="w-3 h-3"></i>
                                CALL NOW
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <% if(contacts.length===0) { %>
                <div class="text-center py-12 bg-white rounded-xl border border-dashed border-gray-300">
                    <p class="text-slate-500">No emergency contacts added yet.</p>
                </div>
                <% } %>
        </div>
    </main>

    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // Responsive Sidebar Toggle
        const menuBtn = document.getElementById('menuBtn');
        const sidebar = document.getElementById('sidebar');

        menuBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            sidebar.classList.toggle('-translate-x-full');
        });

        // Close sidebar when clicking outside
        document.addEventListener('click', (e) => {
            if (window.innerWidth < 768 && !sidebar.contains(e.target) && !menuBtn.contains(e.target)) {
                sidebar.classList.add('-translate-x-full');
            }
        });
    </script>
</body>

</html>
