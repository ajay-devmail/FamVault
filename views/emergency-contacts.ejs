<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Emergency Contacts</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gray-50 text-slate-800">

    <div class="flex h-screen overflow-hidden">
        
        <aside class="w-64 bg-white border-r border-gray-200 hidden md:flex flex-col">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-blue-600 p-1.5 rounded-lg">
                    <i data-lucide="shield" class="w-6 h-6 text-white fill-current"></i>
                </div>
                <span class="text-xl font-bold text-slate-900">FamVault</span>
            </div>

            <nav class="flex-1 px-4 space-y-1 mt-4">
                <a href="/overview" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-blue-600 rounded-lg transition-colors group">
                    <i data-lucide="layout-dashboard" class="w-5 h-5 group-hover:text-blue-600"></i>
                    <span class="font-medium">Overview</span>
                </a>
                <a href="/documents" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-blue-600 rounded-lg transition-colors group">
                    <i data-lucide="file-text" class="w-5 h-5 group-hover:text-blue-600"></i>
                    <span class="font-medium">Documents</span>
                </a>
                <a href="/medical-records" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-blue-600 rounded-lg transition-colors group">
                    <i data-lucide="heart-pulse" class="w-5 h-5 group-hover:text-blue-600"></i>
                    <span class="font-medium">Medical Records</span>
                </a>
                
                <a href="/emergency-contacts" class="flex items-center gap-3 px-4 py-3 bg-blue-600 text-white rounded-lg transition-colors shadow-sm shadow-blue-200">
                    <i data-lucide="phone" class="w-5 h-5"></i>
                    <span class="font-medium">Emergency Contacts</span>
                </a>

                <a href="/reminders" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 hover:text-blue-600 rounded-lg transition-colors group">
                    <i data-lucide="bell" class="w-5 h-5 group-hover:text-blue-600"></i>
                    <span class="font-medium">Reminders</span>
                </a>
            </nav>

            <div class="p-4 border-t border-gray-100 space-y-1">
                <a href="/settings" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-lg transition-colors">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    <span class="font-medium">Settings</span>
                </a>
                <a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    <span class="font-medium">Sign Out</span>
                </a>
            </div>
        </aside>

        <main class="flex-1 overflow-y-auto p-8">
            <div class="max-w-5xl mx-auto">
                <div class="flex items-center justify-between mb-8">
                    <h1 class="text-3xl font-bold text-slate-900">Emergency Contacts</h1>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 mb-8">
                    <h2 class="text-lg font-bold mb-4">Add New Contact</h2>
                    <form action="/add-contact" method="POST" class="flex flex-col md:flex-row gap-4 items-end">
                        <div class="flex-1 w-full">
                            <label class="block text-xs font-bold text-slate-500 mb-1">Name</label>
                            <input type="text" name="name" placeholder="Full Name" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                        </div>
                        <div class="flex-1 w-full">
                            <label class="block text-xs font-bold text-slate-500 mb-1">Relationship</label>
                            <input type="text" name="relationship" placeholder="e.g. Spouse, Doctor" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                        </div>
                        <div class="flex-1 w-full">
                            <label class="block text-xs font-bold text-slate-500 mb-1">Phone</label>
                            <input type="text" name="phone" placeholder="+91..." required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                        </div>
                        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-700 w-full md:w-auto">Add</button>
                    </form>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <% if(contacts.length === 0) { %>
                        <div class="col-span-2 text-center py-10 text-slate-400 bg-white rounded-xl border border-dashed border-gray-300">
                            No emergency contacts added yet.
                        </div>
                    <% } else { %>
                        <% contacts.forEach(contact => { %>
                            <div class="bg-white p-6 rounded-xl border border-l-4 border-l-green-500 shadow-sm flex justify-between items-center">
                                <div>
                                    <h3 class="font-bold text-xl text-slate-900"><%= contact.name %></h3>
                                    <p class="text-sm text-slate-500"><%= contact.relationship %></p>
                                </div>
                                <div class="text-right">
                                    <div class="text-lg font-mono font-bold text-slate-700"><%= contact.phone %></div>
                                    <a href="tel:<%= contact.phone %>" class="text-xs text-green-600 font-bold hover:underline">CALL NOW</a>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </main>
    </div>
    <script>lucide.createIcons();</script>
</body>
</html>
